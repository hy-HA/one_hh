extends base.pug

block content   
    if errorMessage 
        span=errorMessage
    form(method="POST", action="/videos/upload")
        input(placeholer="Title", required, type="text", name="title", maxlength=80)
        input(placeholer="Description", required, type="text", name="description", minlength=5)
        input(placeholer="Hashtags, separated by comma." required, type="text", name="hashtags")
        input(type="submit", value="Upload Video")