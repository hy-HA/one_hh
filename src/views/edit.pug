extends base.pug

block content   
    h4 Update Video
    form(method="POST")
        input(name="title", placeholer="video Title", value=video.title, required)
        input(placeholer="Description", required, type="text", name="description", minlength=5, value=video.description)
        input(placeholer="Hashtags, separated by comma." required, type="text", name="hashtags", value=video.hashtags.join())
        input(value="Save", type="submit")